<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

         
    <!-- 用户充值流水     -->
    <dubbo:service 
        interface="com.facishare.pay.business.service.UserChargeService" 
        ref="userChargeServiceImpl" 
        id="userChargeProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
    <!-- 用户提现流水     -->   
    <dubbo:service 
        interface="com.facishare.pay.business.service.UserGetMoneyService" 
        ref="userGetMoneyServiceImpl" 
        id="userGetMoneyProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
    <!-- 用户转账流水     -->    
    <dubbo:service 
        interface="com.facishare.pay.business.service.UserTransferService" 
        ref="userTransferServiceImpl" 
        id="userTransferProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
    <!-- 用户信息     -->    
    <dubbo:service 
        interface="com.facishare.pay.business.service.UserInfoService" 
        ref="userInfoServiceImpl" 
        id="userInfoProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
    
    <!-- 用户银行卡信息     -->    
    <dubbo:service 
        interface="com.facishare.pay.business.service.UserCardInfoService" 
        ref="userCardInfoServiceImpl" 
        id="userCardInfoProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
        
    <!-- 操作日志查询    -->    
    <dubbo:service 
        interface="com.facishare.pay.business.service.OperateLogService" 
        ref="operateLogServiceImpl" 
        id="operateLogProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
        
    <dubbo:service 
        interface="com.facishare.pay.business.service.UserWalletService" 
        ref="userWalletServiceImpl" 
        id="userWalletProvider" 
        provider="businessProvider"
        protocol="dubbo" 
        version="1.0" />
    
</beans>