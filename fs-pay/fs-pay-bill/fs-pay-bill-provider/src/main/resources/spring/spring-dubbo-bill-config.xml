<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       ">
    <description>dubbo server端配置</description>

    <!-- Application name -->
    <dubbo:application id="billApplication"
                       name="${bill.dubbo.application.name}"
                       owner="${bill.dubbo.application.owner}"
                       organization="${bill.dubbo.application.organization}"
                       logger="slf4j"
                       compiler="javassist"/>

    <!-- 服务端配置  -->
    <!--协议-->
    <dubbo:protocol id="billProtocol"
                    name="${bill.dubbo.protocol.name}"
                    dispatcher="${bill.dubbo.protocol.dispatcher}"
                    threadpool="${bill.dubbo.protocol.threadpool}"
                    threads="${bill.dubbo.protocol.threads}">
    </dubbo:protocol>

    <!--注册中心, 在本地开发环境请采用直连方式，可把 register, subscribe 都配置为false-->
    <!-- group="${bill.dubbo.registry.group}" -->
    <dubbo:registry id="billRegistry"
                    protocol="${bill.dubbo.registry.name}"
                    address="${bill.dubbo.registry.address}"
                    client="${bill.dubbo.registry.client}"
                    session="60000"
                    register="true"
                    subscribe="true"
                    check="false" file="bill-registry-cache.properties">
    </dubbo:registry>
    <!--服务-->
    <dubbo:provider id="billProvider"
                    application="billApplication"
                    registry="billRegistry"
                    protocol="billProtocol"
                    port="${bill.dubbo.provider.port}"
                    cluster="${bill.dubbo.provider.cluster}"
                    loadbalance="${bill.dubbo.provider.loadbalance}"
                    serialization="${bill.dubbo.provider.serialization}"
                    retries="${bill.dubbo.provider.retries}"
                    timeout="${bill.dubbo.provider.timeout}"
                    proxy="javassist"
                    delay="-1"
                    >
    </dubbo:provider>
    
</beans>